<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Passcode">

    <EditText
        android:id="@+id/pass3"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/passcoden"
        android:cursorVisible="false"
        android:ems="10"
        android:inputType="numberPassword"
        android:textColor="#1A6FEE"
        app:layout_constraintBottom_toTopOf="@+id/b1"
        app:layout_constraintStart_toEndOf="@+id/pass2"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.451" />

    <EditText
        android:id="@+id/pass4"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/passcoden"
        android:cursorVisible="false"
        android:ems="10"
        android:inputType="numberPassword"
        android:textColor="#1A6FEE"
        app:layout_constraintBottom_toTopOf="@+id/b1"
        app:layout_constraintStart_toEndOf="@+id/pass3"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.451" />

    <Button
        android:id="@+id/b0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="164dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/keyboard"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="264dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/keyboard"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/b9"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/keyboard"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/b0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="164dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/keyboard"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/b0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="264dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/keyboard"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/b0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/keyboard"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/b7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="164dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/keyboard"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/b8"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/keyboard"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/b5"
        app:layout_constraintStart_toEndOf="@+id/b1" />

    <Button
        android:id="@+id/b3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/keyboard"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/b6"
        app:layout_constraintStart_toEndOf="@+id/b2" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Для защиты ваших персональных данных"
        android:textColor="#939396"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Пропустить"
        android:textColor="#1A6FEE"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Создайте пароль"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/keyboard"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/b4"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/backspace"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@+id/b0"
        app:layout_constraintTop_toBottomOf="@+id/b9"
        app:srcCompat="@drawable/delicon" />

    <EditText
        android:id="@+id/pass1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="156dp"
        android:background="@drawable/passcoden"
        android:cursorVisible="false"
        android:ems="10"
        android:inputType="numberPassword"
        android:textColor="#1A6FEE"
        app:layout_constraintBottom_toTopOf="@+id/b1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.451" />

    <EditText
        android:id="@+id/pass2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/passcoden"
        android:cursorVisible="false"
        android:ems="10"
        android:inputType="numberPassword"
        android:textColor="#1A6FEE"
        app:layout_constraintBottom_toTopOf="@+id/b1"
        app:layout_constraintStart_toEndOf="@+id/pass1"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.451" />

</androidx.constraintlayout.widget.ConstraintLayout>